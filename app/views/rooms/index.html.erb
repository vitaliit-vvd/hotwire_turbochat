<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <%= render @rooms %>
<% end %>

<% if current_user.present? %>
  <%= form_with model: @new_room, class: "mt-4" do |f| %>
    <div class="flex flex-row justify-center">
      <%= f.submit "Create room",
                   class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer basis-1/12" %>
    </div>
  <% end %>
<% end %>
